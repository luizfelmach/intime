// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WatchCategory {
  id    Int     @id @default(autoincrement())
  label String
  Watch Watch[]
}

model WatchBrand {
  id    Int     @id @default(autoincrement())
  label String
  Watch Watch[]
}

model Watch {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  images      String[]
  videos      String[]

  WatchBrand      WatchBrand    @relation(fields: [watchBrandId], references: [id])
  watchBrandId    Int
  WatchCategory   WatchCategory @relation(fields: [watchCategoryId], references: [id])
  watchCategoryId Int
}
